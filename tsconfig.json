{
  "compilerOptions": {
    "allowJs": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "WebWorker", "DOM.Iterable"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "isolatedModules": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "types": ["jest", "node"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "."
  }
}
