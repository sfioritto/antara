{
  "name": "positronic",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "positronic": "./bin/positronic.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "swc . --out-dir dist && chmod +x dist/bin/positronic.js && cp package.json dist",
    "build:watch": "nodemon --watch './**/*' --watch '*.ts' --ignore 'dist/**/*' --ext ts,js,json --exec 'npm run build'",
    "start": "npm run build && node dist/example.js",
    "test": "jest --silent"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.2",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.4",
    "@swc/plugin-transform-imports": "^6.0.4",
    "@types/better-sqlite3": "^7.6.12",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "ts-jest": "^29.2.5",
    "typescript": "^5.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  }
}
